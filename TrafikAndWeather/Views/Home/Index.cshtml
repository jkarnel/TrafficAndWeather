@model IndexViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="header">
    <div class="logo"></div>
    <div class="selectors">
        <div class="dropdown">@Html.DropDownListFor(x => x.Country, Model.Countries)</div>
        <div class="dropdown">@Html.DropDownListFor(x => x.Town, Model.Towns)</div>
    </div>
</div>
<div class="content">
    <div class="trafic">
        @Html.Partial("_Trafic", Model.TraficDetails);
    </div>
    <div class="weather">
        @Html.Partial("_Weather", Model.WeatherDetails);
    </div>
</div>

@section Scripts{
    <environment include="Development">
        <script src="~/js/Home/Index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Home/Index.min.js"></script>
    </environment>
}
