@model IndexViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="header">
    <div class="logo">
        <img src="~/images/uklon-logo.png" />
    </div>
    <div class="selectors">
        <div class="dropdown">
            @Html.DropDownList("Countries", Model.Countries, new { @id = "countries" })
        </div>
        <div class="clear"></div>
        <div class="dropdown">
            @Html.DropDownList("Towns", Model.Towns, new { @id = "towns" })
        </div>
    </div>
</div>
<div class="content">
    <div id="traffic">
        @Html.Partial("_Traffic", Model.TrafficDetails)
    </div>
    <div id="weather">
        @Html.Partial("_Weather", Model.WeatherDetails)
    </div>
</div>

@section Scripts{
    <environment include="Development">
        <script src="~/js/WT/Index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/WT/Index.min.js"></script>
    </environment>
}
